doctype html
html
  head
    block head
      title #{title}
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/layouts/core.min.css?#{cacheBreaker}')
    link(rel='stylesheet', href='/layouts/style.css?#{cacheBreaker}')
    block neck
  body
    div.navbar.navbar-default.navbar-fixed-top
      div.container
        div.navbar-header
          a.navbar-brand(href='/')
            img.navbar-logo(src='/media/logo-symbol-64x64.png', alt='Logo')
            span.navbar-brand-label #{projectName}
          button.navbar-toggle.collapsed(data-toggle='collapse', data-target='.my-navbar-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
        div.navbar-collapse.my-navbar-collapse.collapse
          ul.nav.navbar-nav
            li: a(href='/') 首页
            li: a(href='/about/') 关于
            li: a(href='/events/') 事件
            if user && user.username
              li: a(href='/signup/') 注册
            li: a(href='/contact/') 联系我们
          ul.nav.navbar-nav.navbar-right
            if user && user.username
              li: a(href="/myevents/")
                i.fa.fa-calendar
                | My Events
              li: a(href="/events/add")
                i.fa.fa-plus
                | Add Events
              li: a(href="#{user.defaultReturnUrl}")
                i.fa.fa-user
                | #{user.username}
            else
              li: a(href='/login/')
                i.fa.fa-user
                |  Sign In

    div.page
      div.container
        != messages() 
        block body

    div.footer
      div.container
        span.copyright.pull-right
          |&#169; #{copyrightYear} #{copyrightName}
        ul.links
          li: a(href='/') Home
          li: a(href='/contact/') Contact
        div.clearfix

    div.ajax-spinner
      img(src='/media/ajax-pulse.gif', alt='Loading')

    //if lte IE 9
      script(src='/layouts/ie-sucks.min.js?#{cacheBreaker}')
    script(src='/layouts/core.min.js?#{cacheBreaker}')

    block feet
